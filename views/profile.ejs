<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Profile</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <br>
            <div class="">
                <div class="text-center">
                    <h3 class="d-inline float-none">Profile</h3>
                </div>
                <form class="d-inline float-right" action="/logout" method="post">
                    <button type="submit" name="button" class="btn btn-warning">Logout</button>
                </form>
            </div>
            <br>
            <form class="" action="" method="post">
                <div class="form-group">
                    <input type="hidden" name="id" value="<%= id %>"> <!-- to delete or update it -->
                    <input type="hidden" name="rev" value="<%= rev %>"> <!-- to delete or update it -->
                    <input type="hidden" name="pass" value="<%= pass %>"> <!-- to delete or update it -->
                    <label for="name">Name: </label>
                    <input class="form-control" type="text" name="name" value="<%= name %>">
                    <label for="email">Email: </label>
                    <input class="form-control" type="email" name="email" value="<%= email %>">
                    <label for="email">Phone: </label>
                    <input class="form-control" type="text" name="phone" value="<%= phone %>">
                    <label for="add">Address: </label>
                    <input class="form-control" type="text" name="address" value="<%= address %>">
                </div>
                <div class="text-center">
                    <button type="submit" name="button" formaction="/user/delete" class="btn btn-danger btn-lg">Delete</button>
                    <button type="submit" name="button" formaction="/user/update" class="btn btn-primary btn-lg">Update</button>
                </div>
            </form>
        </div>
    </body>
    <script src="/js/bootstrap.js" charset="utf-8"></script>
</html>
